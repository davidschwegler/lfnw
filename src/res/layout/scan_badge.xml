<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@drawable/site_background_dark_repeat" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#FFFCA300" />

    <Button
        android:id="@+id/scan_button"
        android:layout_width="128dp"
        android:layout_height="64dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center_horizontal"
        android:drawableLeft="@drawable/ic_scan_contact"
        android:text="@string/scan_badge_button_caption" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ListView
            android:id="@+id/scan_badge_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@android:id/empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/scan_badge_list_empty"
            android:textStyle="italic" />
    </FrameLayout>

</LinearLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp"
    android:paddingTop="8dp"
    android:paddingLeft="@dimen/list_activity_item_horizontal_margin"
    android:paddingRight="@dimen/list_activity_item_horizontal_margin"
    tools:context=".SessionsActivity" >

    <CheckBox
        android:id="@+id/session_star"
        style="?android:attr/starStyle"
        android:layout_marginRight="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/session_title"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/session_star"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="Developing for Android's Uniqueness" />

    <TextView
        android:id="@+id/session_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/session_title"
        android:layout_below="@id/session_title"
        android:text="David Schwegler | Mobile and Android | Intermediate" />
    

</RelativeLayout>